{
  "plugins": [
    "node_modules/better-docs/typescript"
  ],
  "opts":{
    "template": "node_modules/better-docs",
    "destination": "docs/"
  },
  "recurseDepth": 10,
  "source": {
      "include": ["./src","./config"],
      "includePattern": "\\.(jsx|js|ts|tsx)$",
      "excludePattern": "(^|\\/|\\\\)_"
  },
  "sourceType": "module",
  "tags": {
      "allowUnknownTags": true,
      "dictionaries": ["jsdoc","closure"]
  },
  "templates": {
      "cleverLinks": false,
      "monospaceLinks": false
  }
}

